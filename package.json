{
    "name": "openlayers-base-packages",
    "private": true,
    "type": "module",
    "license": "Apache-2.0",
    "scripts": {
        "clean": "rimraf dist && pnpm recursive exec rimraf dist",
        "dev": "vite",
        "check-types": "tsc --noEmit",
        "watch-types": "pnpm check-types -w",
        "build": "vite build",
        "build-packages": "pnpm run -r --aggregate-output build",
        "build-docs": "typedoc",
        "build-license-report": "ts-node --esm ./support/create-license-report.ts",
        "preview": "vite preview",
        "lint": "eslint ./src ./support --cache --ext .js,.ts,.jsx,.tsx,.mjs,.mts,.cjs,.cts",
        "prettier-check": "pnpm prettier:common -c",
        "prettier": "pnpm prettier:common -w",
        "prettier:common": "prettier ./src ./support --ignore-path .eslintignore --cache",
        "test": "vitest",
        "lint-shared-versions": "syncpack list-mismatches",
        "update-shared-versions": "syncpack fix-mismatches",
        "prepare": "husky install",
        "ci:test": "pnpm run clean && pnpm run lint && pnpm run check-types && vitest run",
        "ci:version": "pnpm changeset version && pnpm install",
        "ci:publish": "pnpm run clean && pnpm run build-packages && pnpm publish -r --access public && pnpm changeset tag"
    },
    "pnpm": {
        "overrides": {
            "ol-mapbox-style": "workspace:disabled-package@*"
        }
    },
    "dependencies": {
        "@chakra-ui/icons": "^2.0.19",
        "@chakra-ui/react": "^2.6.1",
        "@chakra-ui/system": "^2.5.7",
        "@emotion/cache": "^11.11.0",
        "@emotion/react": "^11.11.0",
        "@emotion/styled": "^11.11.0",
        "@formatjs/intl": "^2.7.2",
        "@open-pioneer/chakra-integration": "^0.1.3",
        "@open-pioneer/core": "^0.1.3",
        "@open-pioneer/integration": "^0.1.3",
        "@open-pioneer/runtime": "^0.1.4",
        "@open-pioneer/test-utils": "^0.1.5",
        "framer-motion": "^10.12.16",
        "ol": "^7.3.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-use": "^17.4.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.1",
        "@open-pioneer/build-package-cli": "^0.2.0",
        "@open-pioneer/build-support": "^0.6.0",
        "@open-pioneer/vite-plugin-pioneer": "^0.8.5",
        "@testing-library/dom": "^9.3.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^16.18.34",
        "@types/react": "^18.2.7",
        "@types/react-dom": "^18.2.4",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vitejs/plugin-react-swc": "^3.3.1",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "fast-glob": "^3.2.12",
        "handlebars": "^4.7.7",
        "husky": "^8.0.3",
        "js-yaml": "^4.1.0",
        "jsdom": "^22.1.0",
        "prettier": "^2.8.8",
        "rimraf": "^5.0.1",
        "rollup-plugin-visualizer": "^5.9.0",
        "sass": "^1.62.1",
        "syncpack": "^10.5.1",
        "ts-node": "^10.9.1",
        "typedoc": "^0.24.7",
        "typescript": "~5.0.4",
        "vite": "^4.3.9",
        "vite-plugin-eslint": "^1.8.1",
        "vitest": "^0.31.2"
    },
    "engines": {
        "node": ">= 16",
        "pnpm": "^7 || ^8"
    }
}
