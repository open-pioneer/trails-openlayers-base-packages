{
    "name": "openlayers-base-packages",
    "private": true,
    "type": "module",
    "license": "Apache-2.0",
    "scripts": {
        "clean": "rimraf dist && pnpm recursive exec rimraf dist",
        "dev": "vite",
        "check-types": "tsc --noEmit",
        "watch-types": "pnpm check-types -w",
        "build": "vite build",
        "build-packages": "pnpm run -r --aggregate-output build",
        "build-docs": "typedoc",
        "build-license-report": "node --loader ts-node/esm --no-warnings=ExperimentalWarning ./support/create-license-report.ts ",
        "preview": "vite preview",
        "lint": "eslint ./src ./support --cache --ext .js,.ts,.jsx,.tsx,.mjs,.mts,.cjs,.cts",
        "prettier-check": "pnpm prettier:common -c",
        "prettier": "pnpm prettier:common -w",
        "prettier:common": "prettier ./src ./support ./docs --ignore-path .eslintignore --cache",
        "test": "vitest",
        "lint-shared-versions": "syncpack list-mismatches",
        "update-shared-versions": "syncpack fix-mismatches",
        "prepare": "husky install",
        "ci:test": "pnpm run clean && pnpm run lint && pnpm run check-types && vitest run",
        "ci:version": "pnpm changeset version && pnpm install",
        "ci:publish": "pnpm run clean && pnpm run build-packages && pnpm publish -r --access public && tag-current-versions"
    },
    "pnpm": {
        "//": [
            "overrides",
            "=========",
            "ol-mapbox-style: license issues",
            "semver: https://github.com/advisories/GHSA-c2qf-rxjj-qqgw",
            "tough-cookie: https://github.com/advisories/GHSA-72xf-g2v4-qvf3",
            "",
            "ignored cves",
            "============",
            "plugin-react-swc has been patched to transpile to es2022 instead of es2020, to support native private fields",
            "see also https://github.com/vitejs/vite-plugin-react-swc/issues/141",
            "",
            "patches",
            "=======",
            "@vitejs/plugin-react-swc: patch ecma script version to 2022 (see https://github.com/vitejs/vite-plugin-react-swc/issues/141)",
            "@changesets/assemble-release-plan: don't bump to major for 0.x packages (see https://github.com/changesets/changesets/issues/1228)"
        ],
        "overrides": {
            "ol-mapbox-style": "workspace:disabled-package@*",
            "semver@<7.5.2": ">=7.5.2",
            "tough-cookie@<4.1.3": ">=4.1.3"
        },
        "auditConfig": {
            "ignoreCves": []
        },
        "patchedDependencies": {
            "@changesets/assemble-release-plan@5.2.4": "patches/@changesets__assemble-release-plan@5.2.4.patch"
        }
    },
    "dependencies": {
        "@chakra-ui/icons": "^2.1.0",
        "@chakra-ui/react": "^2.8.0",
        "@chakra-ui/system": "^2.6.0",
        "@emotion/cache": "^11.11.0",
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "@formatjs/intl": "^2.9.0",
        "@open-pioneer/chakra-integration": "^1.0.0",
        "@open-pioneer/core": "^1.1.0",
        "@open-pioneer/integration": "^1.0.1",
        "@open-pioneer/runtime": "^1.0.1",
        "@open-pioneer/test-utils": "^1.0.0",
        "framer-motion": "^10.16.0",
        "ol": "^8.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-use": "^17.4.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.2",
        "@open-pioneer/build-package-cli": "^1.0.4",
        "@open-pioneer/build-support": "^1.0.0",
        "@open-pioneer/tag-current-versions": "^1.0.1",
        "@open-pioneer/vite-plugin-pioneer": "^1.1.2",
        "@testing-library/dom": "^9.3.1",
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^16.18.40",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "@vitejs/plugin-react-swc": "^3.4.0",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-import-resolver-typescript": "^3.6.0",
        "eslint-plugin-header": "^3.1.1",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-unused-imports": "^3.0.0",
        "fast-glob": "^3.3.1",
        "handlebars": "^4.7.8",
        "happy-dom": "^11.0.2",
        "husky": "^8.0.3",
        "js-yaml": "^4.1.0",
        "jsdom": "^22.1.0",
        "prettier": "^3.0.2",
        "resize-observer-polyfill": "^1.5.1",
        "rimraf": "^5.0.1",
        "rollup-plugin-visualizer": "^5.9.2",
        "sass": "^1.65.1",
        "syncpack": "10.5.1",
        "ts-node": "^10.9.1",
        "typedoc": "^0.24.8",
        "typescript": "~5.1.6",
        "vite": "^4.4.9",
        "vite-plugin-eslint": "^1.8.1",
        "vitest": "^0.34.1"
    },
    "engines": {
        "node": ">= 16",
        "pnpm": "^7 || ^8"
    }
}
